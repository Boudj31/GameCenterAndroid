<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameCenter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Title -->
    <style name="defaultTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/codeb</item>
    </style>

    <style name="btnText">
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/codeb</item>
    </style>

    <!-- Custom text -->
    <style name="defaultTextWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/coder</item>
    </style>

    <style name="defaultTextPurple">
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/coder</item>
    </style>
    <style name="defaultTitleGame">
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/codeb</item>
    </style>

    <style name="homeText">
        <item name="android:textSize">55sp</item>
        <item name="android:fontFamily">@font/codeb</item>
    </style>

    <!-- TABBAR-->
    <style name="TabBarStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/codeb</item>
    </style>



    <style name="CustomActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/violet</item>
    </style>

</resources>